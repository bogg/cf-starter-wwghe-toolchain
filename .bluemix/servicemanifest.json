{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/sc.title"
    },
    "description": {
        "$ref": "#/messages/sc.description"
    },
    "longDescription": {
        "$ref": "#/messages/sc.longDescription"
    },
    "type": "object",
    "properties": {
        "manifest-repo": {
            "description": "Service contract manifest repository",
            "type": "string"
        },
        "service-name": {
            "description": "Name of the offering in the Bluemix Catalog this application belongs to",
            "type": "string"
        },
        "component-name": {
            "description": "Name of the component being deployed",
            "type": "string"
        },
        "bailey-project": {
            "description": "Name of the project in the Bailey tool",
            "type": "string"
        },
        "pager-duty": {
            "description": "URL to PagerDuty escalation policy",
            "type": "string"
        },
        "customer-tickets": {
            "description": "URL to the customer ticket repository",
            "type": "string"
        }
    },
    "required": [
        "manifest-repo",
        "service-name",
        "component-name",
        "bailey-project",
        "pager-duty",
        "customer-tickets"
    ],
    "form": [
        {
            "type": "text",
            "readonly": true,
            "title": "Manifest Runtime GIT Repo",
            "key": "manifest-repo"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Offering Name",
            "key": "service-name"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Component Name",
            "key": "component-name"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "PagerDuty escalation policy",
            "key": "pager-duty"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Bailey project name",
            "key": "bailey-project"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Customer ticket repository",
            "key": "customer-tickets"
        }
    ]
}