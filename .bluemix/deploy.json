{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "staging-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "staging-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
        "staging-space": {
            "description": "The bluemix space",
            "type": "string"
        },
        "prod-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
        "prod-space": {
            "description": "The bluemix space",
            "type": "string"
        },
        "prod-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "build-manifest": {
            "title": "Add/Build manifest runtime libraries",
            "type": "string",
            "enum": [
                "yes",
                "no"
            ]
        },
        "manifest-service-name": {
            "description": "Name of the offering hosting the service",
            "type": "string"
        },
        "manifest-bailey-project": {
            "description": "Name of the project in the Bailey tool",
            "type": "string"
        },
        "manifest-pager-duty": {
            "description": "URL to PagerDuty escalation policy",
            "type": "string"
        },
        "manifest-customer-tickets": {
            "description": "URL where customer tickets are opened",
            "type": "string"
        },
        "manifest-application-type": {
            "description": "One of the following: public, dedicated or local",
            "type": "string",
            "enum": [
                "public",
                "dedicated",
                "local"
            ]
        }
    },
    "required": [
        "staging-region",
        "staging-organization",
        "staging-space",
        "prod-region",
        "prod-organization",
        "prod-space",
        "prod-app-name"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName"
            },
            "key": "prod-app-name"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "15%",
                "28%",
                "28%",
                "28%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/stagingStage"
                    }
                },
                {
                    "type": "select",
                    "key": "staging-region"
                },
                {
                    "type": "select",
                    "key": "staging-organization"
                },
                {
                    "type": "select",
                    "key": "staging-space",
                    "readonly": false
                },                
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "select",
                    "key": "prod-organization"
                },
                {
                    "type": "select",
                    "key": "prod-space",
                    "readonly": false
                }
            ]
        },
        {
            "type": "selectfieldset",
            "key": "build-manifest",
            "titleMap": {
                "yes": "Add the runtime libaries only",
                "no": "Do not add the runtime libraries"
            },
            "items": [
                {
                    "type": "section",
                    "description": "Service Manifest Static Fields.  These values will be the same for all instances of the application",
                    "items": [
                        "manifest-service-name",
                        "manifest-bailey-project",
                        "manifest-pager-duty",
                        "manifest-customer-tickets",
                        "manifest-application-type"
                    ]
                },
                {
                    "type": "label",
                    "title": "All production services deployed to Bluemix must include the manifest runtime libraries"
                }
            ]
        }
    ]
}